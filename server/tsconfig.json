{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 20",
  "_version": "20.1.0",
  "compilerOptions": {
    "module": "esnext",   // ou "node16" ou "es2020"
    "target": "esnext",    // ou "es2020", conforme necessário
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "infra",
    "src/**/*", // Inclua seus arquivos de código
    "./express.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}